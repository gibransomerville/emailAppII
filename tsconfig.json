{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowUmdGlobalAccess": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "preserveWatchOutput": true,
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["core/*"],
      "@ui/*": ["ui/*"],
      "@email/*": ["email/*"],
      "@auth/*": ["auth/*"],
      "@config/*": ["config/*"],
      "@utils/*": ["utils/*"],
      "@managers/*": ["managers/*"],
      "@types/*": ["../types/*"]
    },
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [
      "node"
    ],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "preserve"
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "release"
  ]
} 